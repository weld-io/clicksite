<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title><%- article.title %></title>
<meta property="og:site_name" content="<%= article.title %>">
<meta property="og:title" content="<%= article.title %>">
<meta name="twitter:title" content="<%= article.title %>">
<meta name="description" content="<%= article.description %>">
<meta property="og:description" content="<%= article.description %>">
<meta name="twitter:description" content="<%= article.description %>">
<meta property="og:locale" content="en_US">
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@Weld_io">
<meta name="twitter:creator" content="@Weld_io">
<meta property="og:image" content="<%- article.imageUrl %>">
<meta name="twitter:image" content="<%- article.imageUrl %>">
<% include ../shared/header %>
</head>

<body>
<main>

<section class="article-frame">
	<h2><%= article.title %></h2>
<% if (article.comment) { %>
	<p class="comment"><%= truncate(article.comment, 200) %></p>
<% } else { %>
	<p class="description"><%= truncate(article.description, 200) %></p>
<% } %><% if (isAuthenticated) { %>
	<div class="actions"><button onclick="ClickSite.addComment('<%= article._id %>', '<%= password %>')">Comment</button></div>
<% } %>
	<a href="<%= article.url %>" onclick="ClickSite.trackClickArticle('<%= article.originalSlug %>', '<%= languageCode %>')" target="_blank"><button>Continue to article</button></a>

	<div class="translations">
		Read in:
		<%- getTranslatedLink(article, 'Arabic', 'ar', languageCode) %>
		<%- getTranslatedLink(article, 'Chinese', 'zh-cn', languageCode) %>
		<%- getTranslatedLink(article, 'English', 'en', languageCode) %>
		<%- getTranslatedLink(article, 'French', 'fr', languageCode) %>
		<%- getTranslatedLink(article, 'German', 'de', languageCode) %>
		<%- getTranslatedLink(article, 'Hindi', 'hi', languageCode) %>
		<%- getTranslatedLink(article, 'Italian', 'it', languageCode) %>
		<%- getTranslatedLink(article, 'Japanese', 'ja', languageCode) %>
		<%- getTranslatedLink(article, 'Portuguese', 'pt', languageCode) %>
		<%- getTranslatedLink(article, 'Russian', 'ru', languageCode) %>
		<%- getTranslatedLink(article, 'Spanish', 'es', languageCode) %>
		<%- getTranslatedLink(article, 'Swedish', 'sv', languageCode) %>
	</div>

</section>

<% include ad %>

<% include ../shared/footer %>