<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title><%- title %></title>
<% include ../shared/header %>
</head>

<body>
<main>

<h1>Articles</h1>

<% if (isAuthenticated) { %>
	<div class="actions"><button onclick="ClickSite.addArticle('<%= password %>')">Add article</button></div>
<% } %>

<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Site</th>
			<th>Image</th>
			<th>Title</th>
			<th>Keywords</th>
		</tr>
	</thead>
	<tbody>
<% for(var i=0; i < articles.length; i++) { %>
		<tr>
			<td><%= formatDate(articles[i].dateCreated) %></td>
			<td><%= articles[i].siteName %></td>
			<td><img class="thumbnail" src="<%= articles[i].imageUrl %>"></td>
			<td><a href="/<%= articles[i].slug + (password ? `?password=${password}` : '') %>" title="<%= articles[i].description %>"><%= articles[i].title %></a></td>
			<td><%= articles[i].keywords.join(', ') %></td>
		</tr>
<% } %>
	</tbody>
</table>

<% include ../shared/footer %>